<div class="row-fluid" id="comment_<%= comment.id %>">
    <%- user = comment.user -%>
    <div class="media-body" id="comment_body_<%= comment.id %>">
        <div class="comment-reply"><%= comment.content %>
            <%##- if current_user.id == user.id -%>
                        <%#= link_to raw('<i class="icon-edit"></i>'), edit_article_comment_path(article, comment), remote: :true %>
                        <%#= link_to raw('<i class="icon-remove"></i>'), article_comment_path(article, comment), method: :delete, remote: :true  %>
                    <%#- end -%>
        </div>
        <div id ="comment_controls">
            <p>
                <small class='pull-right'><%= event_time_format(comment.updated_at) %></small>
            </p>
        </div>
    </div>
</div>