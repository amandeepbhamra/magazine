<%= form_for [@user, @article] do |f| %>
	
	<%= render "shared/error_messages", object: @article %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</div>
	
	<div class="field">
		<%= f.label :deleted_at %><br>
		<%= f.datetime_select :deleted_at %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
