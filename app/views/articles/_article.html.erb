<tr id="<%= article.id %>">
	<td><%= article_counter + 1 %></td>
	<td><%= link_to (truncate article.title, length: 40), [@user, article] %></td>
	<td><%= truncate article.body, length: 100 %></td>
	<td><%= article.created_at.strftime("%d/%m/%Y %I:%M%p") %></td>
	<% unless @user.blank? %>
		<td><%= link_to 'Edit', edit_user_article_path(@user, article), :class => "btn  btn-xs btn-warning" %></td>
		<td><%= link_to 'Destroy', [@user, article], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
	<% end %>
</tr>